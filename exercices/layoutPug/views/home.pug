extends ./layout/layout

block content
  if sent
    .toast(style="background:#4caf50;color:white;padding:10px;border-radius:5px;")
      | Votre message a bien été envoyé !

  .container
    h1 Jean DUPONT
    p Bienvenue sur mon portfolio
    p Contactez-moi à l'adresse email suivante :
    output#generate-email

block scripts
  if sent
    script.
      setTimeout(() => {
        const toast = document.querySelector('.toast');
        if (toast) toast.remove();
      }, 5000);
      
  script.
    (function preventSpam() {
      const b64encodedEmail = 'amVhbi5kdXBvbnRAZ21haWwuY29t';
      document.getElementById('generate-email').textContent = atob(b64encodedEmail);
    })();
    
